<view class="zan-stepper {{size==='small'?'zan-stepper--small':''}}">
	<view bindtap="handleZanStepperMinus" class="zan-stepper__minus {{stepper<=min?'zan-stepper--disabled':''}}" data-disabled="{{stepper<=min}}">-</view>
	<input bindblur="handleZanStepperBlur" class="zan-stepper__text {{min>=max?'zan-stepper--disabled':''}}" disabled="true" type="number" value="{{stepper}} 元"></input>
	<view bindtap="handleZanStepperPlus" class="zan-stepper__plus {{stepper>=max?'zan-stepper--disabled':''}}" data-disabled="{{stepper>=max}}">+</view>
</view>
