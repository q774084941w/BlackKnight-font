.zan-stepper { color: #666; }
.zan-stepper view { display: inline-block; line-height: 30px; padding: 5px 0; text-align: center; min-width: 30px; box-sizing: border-box; vertical-align: middle; font-size: 18px; }
.zan-stepper .zan-stepper__minus { border-right: none; border-radius: 2px; color: #FFF; background: #505050; }
.zan-stepper .zan-stepper__text { display: inline-block; text-align: center; vertical-align: middle; height: 30px; width: 30px; min-height: auto; font-size: 12px; line-height: 30px; }
.zan-stepper .zan-stepper__plus { border-left: none; border-radius: 2px; color: #FFF; background: #505050; }
.zan-stepper .zan-stepper--disabled { color: #505050; background: #DDD; }
.zan-stepper--small view { min-width: 30px; line-height: 18px; }
.zan-stepper--small .zan-stepper__text { width: 50px; line-height: 30px; height: 30px; }
