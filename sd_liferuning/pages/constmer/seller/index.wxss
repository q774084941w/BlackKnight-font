.container {
    margin-bottom: 15rpx;
}

.input-group {
    width: 95%;
    border-bottom: 1rpx solid #dadada;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 2.5%;
    font-size: 30rpx;
}

.input-group input {
    line-height: 80rpx;
    height: 80rpx;
}

.page-help {
    color: #14B5FA;
}

.img-group {
    width: 95%;
    margin: 0 2.5%;
    display: flex;
}

.img-item {
    flex: 1;
    height: 450rpx;
    margin: 1rpx 20rpx;
}

.img-item text {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    display: block;
    margin: 10rpx 0;
}

.img-item image {
    width: 100%;
    box-shadow: 0 0 5rpx #dadada;
    height: 450rpx;
}

.confirm {
    background: #14B5FA;
    color: #FFF;
    height: 80rpx;
    line-height: 80rpx;
    width: 95%;
    margin: 0 4.5%;
    margin-top: 50px;
    font-size: 30rpx;
}
.list-msg {
    padding: 0 20rpx;
    background-color: #fff;
    position: relative;
}
 
.list-msg1 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
 
.list-msg .list-msg2 {
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ccc;
    padding: 0 10rpx;
}
 
.select_box {
    background-color: #eee;
    padding: 0 10rpx;
    width: 93%;
    position: absolute;
    top: 130rpx;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
}
 
@keyframes myfirst {
    from {
        height: 0rpx;
    }
 
    to {
        height: 210rpx;
    }
}
 
.select_one {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #ccc;
}

.fixed {
  float: left
}