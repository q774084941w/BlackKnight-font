.card-info{ width: 85%; margin: 10rpx 2.5%; background: linear-gradient(90deg,#63B1EA,#01B9A3); font-size: 30rpx; display: -webkit-flex; display: flex; -webkit-justify-content: space-between; justify-content: space-between; padding: 80rpx 5%; border-radius: 10rpx; }
.card-info-left,.card-info-right{ height: 100rpx; line-height: 100rpx; color: #FFF; }
.card-info-left text{ display: block; line-height: normal; margin: 15rpx 0; }
.card-info-right .iconfont{ position: relative; top: 0rpx; }
.input-group{ font-size: 30rpx; width: 95%; margin: 10rpx 2.5%; }
.input-group input{ height: 80rpx; line-height: 80rpx; border: 1rpx solid #CCCCCC; border-radius: 10rpx; margin-top: 20rpx; padding: 0 20rpx; }
.help-info{ color: #999; font-size: 30rpx; }
.tip-text{ color: #666; font-size: 28rpx; margin: 100rpx 0 50rpx; }
.nav-btn{ background: green; color: #FFF; border-radius: 10rpx; padding: 10rpx 20rpx; font-size: 30rpx; }
