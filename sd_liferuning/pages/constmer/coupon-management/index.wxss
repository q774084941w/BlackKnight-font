wx-body{ background: #F2F2F2; }
.coupon-group{ width: 100%; }
.coupon{ height: 156rpx; overflow: hidden; display: -webkit-flex; display: flex; -webkit-justify-content: space-between; justify-content: space-between; font-size: 28rpx; padding: 0 30rpx; margin: 15rpx 0; }
.coupon-label,.coupon-info{ height: 100%; }
.coupon-label{ width: 289rpx; font-weight: bold; text-align: center; }
.balance,.coupon-info,.title,.font-style{ display: block; width: 100%; }
.balance,.coupon-info{ text-align: center; padding: 10rpx 0 5rpx; }
.balance{ font-size: 68rpx; color: #F24761; }
.coupon-tip,.small-font{ font-size: 30rpx; }
.coupon-tip{ text-shadow: 3rpx 3rpx 3rpx #666; color: #FFF; }
.coupon-info{ -webkit-flex: 1; flex: 1; height: 156rpx; text-align: left; padding-left: 50rpx; }
.coupon-info .title{ font-size: 30rpx; font-weight: bold; padding: 10rpx 0; color: #282828; }
.coupon-info .font-style{ font-size: 22rpx; margin: 10rpx 0; color: #989898; }
