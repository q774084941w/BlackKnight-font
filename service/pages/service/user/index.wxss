body {
    background: #F2F2F2;
}

.user-face-module {
    overflow: hidden;
    background: #FFF;
    margin-bottom: 15rpx;
    display: flex;
    padding: 0 30rpx;
}

.user-face {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    box-shadow: 0 0 10rpx #333;
    background: #FFF;
    margin: 15rpx 0;
}

.user-info {
    flex: 1;
    overflow: hidden;
    position: relative;
    top: 35rpx;
}

.info {
    margin-left: 30rpx;
    font-size: 30rpx;
}

.gender-icon {
    width: 27rpx;
    height: 27rpx;
    margin-left: 15rpx;
}

.nav-module {
    width: 100%;
    background: #FFF;
    margin-bottom: 15rpx;
}

.nav-item {
    display: flex;
    justify-content: space-between;
    padding: 0 10rpx;
    font-size: 30rpx;
    color: #333;
    border-bottom: 1rpx solid #EDF2F5;
    height: 80rpx;
    line-height: 80rpx;
}



.nav-icon {
    width: 32rpx;
    height: 32rpx;
    margin: 0 10rpx;
}

.nav-flag {
    width: 15rpx;
    height: 24rpx;
    margin: 0 10rpx;
}
