.switch-panel {
    width: 100%;
    height: 100%;
    position: relative;
    font-size: 30rpx;
}

.switch-panel-title {
    background: #FFF;
    color: #333;
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
}

.switch-panel-title .active {
    border-bottom: 1rpx solid #14B5FA;
}

.switch-panel-title-item {
    flex: 1;
    text-align: center;
}

.switch-panel-swiper {
    width: 100%;
    height: 1050rpx;
}

.switch-panel-content {
    width: 100%;
    height: 100%;
    padding-bottom: 100rpx;
}